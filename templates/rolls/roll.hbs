{{#if hasDifficulty}}
    {{#if success}}
        {{#if criticalSuccess}}
            <h2 class="success critical"><i class="fas fa-check-double"></i>&nbsp;{{localize 'dhs-jdr.ui.roll.criticalSuccess'}}</h2>
        {{/if }}
        {{#unless criticalSuccess}}
            <h2 class="success"><i class="fas fa-check"></i>&nbsp;{{localize 'dhs-jdr.ui.roll.success'}}</h2>
        {{/unless}}
    {{/if}}
    {{#unless success}}
        {{#if criticalFailure}}
            <h2 class="failure fumble"><i class="fas fa-skull-crossbones"></i>&nbsp;{{localize 'dhs-jdr.ui.roll.criticalFail'}}</h2>
        {{/if}}
        {{#unless criticalFailure}}
            <h2 class="failure"><i class="fas fa-times"></i>&nbsp;{{localize 'dhs-jdr.ui.roll.fail'}}</h2>
        {{/unless}}
    {{/unless}}
{{/if}}

<h3>{{localize rollType}} {{statPrefix}}<strong>{{statLbl}}</strong> {{#if hasDifficulty}}{{localize 'dhs-jdr.ui.roll.difficulty'}} {{difficulty}}{{/if}}</h3>