<form class="{{cssClass}}" autocomplete="off" spellcheck="false">
    <div class="wrapper">
        <nav class="character-sheet-banner character-sheet-tabs" data-group="primary">
            <a data-tab="character">{{ localize "dhs-jdr.ui.sheets.character.Tab" }}</a>
            <a data-tab="inventory">{{ localize "dhs-jdr.ui.sheets.inventory.Tab" }}</a>
            <a data-tab="capacities">{{ localize "dhs-jdr.ui.sheets.capacities.Tab" }}</a>
            <a data-tab="aptitudes">{{ localize "dhs-jdr.ui.sheets.aptitudes.Tab" }}</a>
            <a data-tab="equipment">{{ localize "dhs-jdr.ui.sheets.equipment.Tab" }}</a>
        </nav>    
        <section class="character-sheet-body">
            <div class="tab characterTab" data-group="primary" data-tab="character">
                {{> "systems/dhs-jdr/templates/actors/tabs/characterTab.hbs"}}
            </div>

            <div class="tab inventoryTab" data-group="primary" data-tab="inventory">
                {{> "systems/dhs-jdr/templates/actors/tabs/inventoryTab.hbs"}}
            </div>

            <div class="tab capacitiesTab" data-group="primary" data-tab="capacities">
                {{> "systems/dhs-jdr/templates/actors/tabs/capacitiesTab.hbs"}}
            </div>

            <div class="tab aptitudesTab" data-group="primary" data-tab="aptitudes">
                {{> "systems/dhs-jdr/templates/actors/tabs/aptitudesTab.hbs"}}
            </div>

            <div class="tab equipmentTab" data-group="primary" data-tab="equipment">
                {{> "systems/dhs-jdr/templates/actors/tabs/equipmentTab.hbs"}}
            </div>                                
        </section>
    </div>
</form>