<div class="tab-title">Personnage</div>
<div class="attributes">
    <div class="box left">
        
        <div style="display:flex;flex-direction:row;align-items:center;justify-content:space-between">
            <div class="field">
                <label>Age :</label>                
                <input type="text" maxlength="3" placeholder="---" style="width:30px;">
            </div>
            <div style="display:flex;flex-direction:row;justify-content:center;align-items:center">
                <label for="taillem">Taille :</label>
                <input id="taillem" type="text" maxlength="2" placeholder="--" style="width:25px;text-align:end;">
                <label for="taillecm">m</label>
                <input id="taillecm" type="text" maxlength="2" placeholder="--" style="width:25px">
            </div>
            <div class="field">
                <label>Sexe :</label>
                <input type="text" maxlength="1" placeholder="-" style="width:10px;text-align:end;">
            </div>
        </div>

        <div style="display:flex;flex-direction:row;align-items:center;justify-content:space-between">
            <div class="field">
                <label>Race :</label>                
                <input type="text" maxlength="14" placeholder="------------------">
            </div>
            <div class="field weight">
                <label>Poids :</label>
                <input type="text" maxlength="3" placeholder="---">
                <label class="field" for="taillecm">Kg</label>
            </div>
        </div>

        <div class="field">      
            <label>Nom :</label>                
            <input type="text" name="name" value="{{actor.name}}" maxlength="24" placeholder="-------------------------------------">            
        </div>

        <div class="fieldArea">
            <label>Langue :</label>                
            <textarea maxlength="50" rows="2" placeholder="--------------------------------------------------"></textarea>
        </div>        

    </div>

    <div class="right">
        <div class="box racial">
            <div>Capacité Raciale</div>
            <textarea maxlength="50" rows="4" placeholder="--------------------------------------------------"></textarea>
        </div>
        <div class="speed">
            <div></div>
            <div class="box">                                              
                <input type="text" maxlength="3" placeholder="---">
                <label>mètres</label>  
            </div>
            <div>
                <label>-</label>  
                <input type="text" maxlength="2" placeholder="--">
            </div>
        </div>
    </div>
</div>

