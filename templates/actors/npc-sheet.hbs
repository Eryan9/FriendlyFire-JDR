<form class="{{cssClass}}" autocomplete="off" spellcheck="false">
    <div class="wrapper">
        <div class="sheet-banner" style="justify-content: space-between; paddding-block: unset; align-items: center;">
            <label style="font-size: 32px;">PNJ</label>

            <div style="display:flex; flex-direction: column;">
                <div style="display: flex; height: 20px; align-items: center;">
                    <label style="color: red; font-weight: bold; text-shadow: 1px 1px 1px black;">HP :</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; text-align: end; color: red; font-weight: bold; text-shadow: 1px 1px 1px black;">
                    <label style="color: red; font-weight: bold; text-shadow: 1px 1px 1px black;">/</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; color: red; font-weight: bold; text-shadow: 1px 1px 1px black;">
                </div>

                <div style="display: flex; height: 20px; align-items: center;">
                    <label style="color: dodgerblue; font-weight: bold; text-shadow: 1px 1px 1px black;">MP :</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; text-align: end; color: dodgerblue; font-weight: bold; text-shadow: 1px 1px 1px black;">
                    <label style="color: dodgerblue; font-weight: bold; text-shadow: 1px 1px 1px black;">/</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; color: dodgerblue; font-weight: bold; text-shadow: 1px 1px 1px black;">
                </div>             
            </div>

            <div style="display:flex; flex-direction: column;">
                <div class="field" style="height: 20px; align-items: center;">
                    <label style="color: yellow; font-weight: bold; text-shadow: 1px 1px 1px black;">Esq :</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; text-align: end; color: yellow; font-weight: bold; text-shadow: 1px 1px 1px black;">
                </div>

                <div class="field" style="height: 20px; align-items: center;">
                    <label style="color: yellow; font-weight: bold; text-shadow: 1px 1px 1px black;">Par :</label>
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px; text-align: end; color: yellow; font-weight: bold; text-shadow: 1px 1px 1px black;">
                </div>                
            </div>

            <div style="display:flex; flex-direction: column;  align-items: center;">
                <label style="height: 20px;">Distance :</label>
                <div class="field" style="height: 20px;">
                    <input type="text" maxlength="3" placeholder="---" style="width: 30px;">
                    <label>m√®tres</label>
                </div>
            </div>

            <div class="field" style="height: 20px;">
                <label style="color: lawngreen; font-weight: bold; text-shadow: 1px 1px 1px black;">XP :</label>
                <input type="text" maxlength="5" placeholder="-----" style="width: 30px; text-align: end; color: lawngreen; font-weight: bold; text-shadow: 1px 1px 1px black;">
            </div>
        </div>
        
        <section class="sheet-body">
            <div class="tab active">
                <div style="flex-basis: 140px; width: 100%; display: flex; justify-content: space-between;">
                    <img class="avatar" src="{{actor.img}}" data-edit="img"></img>
                    <div class="box" style="height:100%; flex-basis: 200px">
                        <div class="multiFields-spaced">
                            <div>
                                <label>Race :</label>
                                <input type="text" placeholder="----------">
                            </div>                      
                            <div>
                                <label>Type :</label>
                                <input type="text" maxlength="5" placeholder="-----">
                            </div>
                        </div>

                        <div class="multiFields-spaced">
                            <div>
                                <label for="taillem">Taille :</label>
                                <input id="taillem" type="text" maxlength="2" placeholder="--">
                                <label for="taillecm">m</label>
                                <input id="taillecm" type="text" maxlength="2" placeholder="--">
                            </div>
                            <div>
                                <label>Sexe :</label>
                                <input type="text" maxlength="1" placeholder="-">
                            </div>
                            <div>
                                <label>Poids :</label>
                                <input type="text" maxlength="3" placeholder="---">
                                <label class="field" for="taillecm">Kg</label>
                            </div>                            
                        </div>

                        <div class="field">      
                            <label>Nom :</label>                
                            <input type="text" name="name" value="{{actor.name}}" maxlength="24" placeholder="-------------------------------------">            
                        </div>

                        <div class="fieldArea">
                            <label>Langue :</label>                
                            <textarea maxlength="50" rows="2" placeholder="--------------------------------------------------"></textarea>
                        </div>        
                    </div>

                    <div class="attributes-block">
                        <div>
                            <label>For</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>

                        <div>
                            <label>Dex</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>

                        <div>
                            <label>Arc</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>


                        <div>
                            <label>Con</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>

                        <div>
                            <label>Cha</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>

                        <div>
                            <label>Eru</label>
                            <input type="text" maxlength="3" placeholder="---">
                        </div>           
                    </div>        
                </div>

                {{> "systems/dhs-jdr/templates/actors/tabs/parts/capacities.hbs"}}

                {{> "systems/dhs-jdr/templates/actors/tabs/parts/weapons.hbs"}}                

                {{> "systems/dhs-jdr/templates/actors/tabs/parts/statsSummary.hbs"}}
            </div>
        </section>
    </div>
</form>